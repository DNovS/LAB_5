@model LAB_5.Models.OrderModel

@{
    ViewBag.Title = "Список деталей";
}
@using (Html.BeginForm("CreateOrderDetal", null, FormMethod.Get))
{
    <div margin="5">
        <p>
            @Html.ActionLink("Добавить", "Create")
        </p>
        <p>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Заказать" class="btn btn-default" />
                </div>
            </div>
        </p>
    </div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.detals[0].name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.detals[0].cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.detals[0].Shop_Name)
            </th>
        </tr>
        @foreach (var item in Model.detals)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Shop_Name)
                </td>
                <td>
                    @Html.ActionLink("Изменить", "Edit", new { id = item.id })
                </td>
                <td>
                    @Html.ActionLink("Удалить", "Delete", new { id = item.id })
                </td>
                <td>
                    <div>
                        <label>
                            <input type="checkbox" name="Order.DetalNumber" value="@item.id" /> @item.name
                        </label>
                    </div>
                </td>
            </tr>

        }
    </table>
}

